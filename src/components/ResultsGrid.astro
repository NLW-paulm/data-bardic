---
import type { BardicRecord } from '../data/bardicNames';

interface Props {
  records: BardicRecord[];
}

const { records } = Astro.props;
---
<div id="results-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  {records.map(record => (
    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
      <h3 class="text-xl font-semibold mb-3 text-red-600">
        {record["BARDIC NAMES"] || record.Surname || 'Unknown'}
      </h3>
      
      <div class="space-y-2">
        {/* Personal Information */}
        {(record.Surname || record["FIRST NAMES"] || record.TITLE) && (
          <div class="border-b pb-2">
            {record.TITLE && <span class="font-medium">{record.TITLE} </span>}
            {record["FIRST NAMES"] && <span>{record["FIRST NAMES"]} </span>}
            {record.Surname && <span>{record.Surname}</span>}
          </div>
        )}

        {/* Location & Date */}
        <div class="space-y-1">
          {record["TOWN VILLAGE"] && (
            <p class="text-gray-600">
              <span class="inline-block w-6">üìç</span>
              {record["TOWN VILLAGE"]}
            </p>
          )}
          {record["DATE ADMITTED"] && (
            <p class="text-gray-600">
              <span class="inline-block w-6">üìÖ</span>
              {record["DATE ADMITTED"]}
            </p>
          )}
        </div>

        {/* Membership & Examination */}
        <div class="space-y-1">
          {record["TYPE OF MEMEBERSHIP"] && (
            <p class="text-gray-600">
              <span class="inline-block w-6">üé≠</span>
              {record["TYPE OF MEMEBERSHIP"]}
            </p>
          )}
          {record["EXAM or HONORARY"] && (
            <p class="text-gray-600">
              <span class="inline-block w-6">üìú</span>
              {record["EXAM or HONORARY"]}
            </p>
          )}
        </div>

        {/* Source & Additional Info */}
        <div class="mt-3 pt-2 border-t text-sm">
          {record.SOURCE && (
            <p class="text-gray-600">
              <span class="font-medium">Source:</span> {record.SOURCE}
            </p>
          )}
          {record["ANY OTHER INFO"] && (
            <p class="text-gray-600 mt-1">
              <span class="font-medium">Additional Info:</span> {record["ANY OTHER INFO"]}
            </p>
          )}
        </div>
      </div>
    </div>
  ))}
</div>